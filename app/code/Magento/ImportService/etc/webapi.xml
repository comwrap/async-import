<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/import/source" method="POST">
        <service class="Magento\ImportService\Api\SourceUploadInterface" method="execute"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/import/start" method="POST">
        <service class="Magento\ImportService\Api\ImportManagementInterface" method="start"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/import/startPoc" method="POST">
        <service class="Magento\ImportService\Api\ImportManagementInterface" method="startPoC"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/import/:uuid" method="GET">
        <service class="Magento\ImportService\Api\ImportStatusInterface" method="execute"/>
        <resources>
            <resource ref="Magento_ImportExport::import" />
        </resources>
    </route>
</routes>
