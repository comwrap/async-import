<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Magento\ImportService\Model\Import\ImportProcessorsPool">
        <arguments>
            <argument name="importProcessors" xsi:type="array">
                <item name="advanced_pricing" xsi:type="array">
                    <item name="add_update" xsi:type="array">
                        <item name="processor" xsi:type="object">Magento\ImportServiceAdvancedPricing\Model\Import\Processors\AdvancedPricing</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\ImportService\Model\Import\ProcessingRules\RulesProcessorFactory">
        <arguments>
            <argument name="rules" xsi:type="array">
                <item name="convertStoreNameToId" xsi:type="array">
                    <item name="class" xsi:type="string" >Magento\ImportService\Model\Import\ProcessingRules\ConvertStoreNameToId</item>
                    <item name="shared" xsi:type="boolean">true</item>
                </item>
            </argument>
        </arguments>
    </type>

</config>
