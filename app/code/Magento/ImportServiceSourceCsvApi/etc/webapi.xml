<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/import/source/csv" method="POST">
        <service class="Magento\ImportServiceApi\Api\SourceCsvUploadInterface" method="execute"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/source/:uuid" method="GET">
        <service class="Magento\ImportServiceApi\Api\SourceCsvRepositoryInterface" method="getByUuid"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/source/csv/:uuid" method="PUT">
        <service class="Magento\ImportServiceApi\Api\SourceCsvUpdateInterface" method="execute"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/sources" method="GET">
        <service class="Magento\ImportServiceApi\Api\SourceCsvRepositoryInterface" method="getList"/>
		<resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/source/:uuid" method="DELETE">
        <service class="Magento\ImportServiceApi\Api\SourceCsvRepositoryInterface" method="deleteByUuid"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
</routes>
